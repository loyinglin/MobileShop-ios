<?xml version="1.0" encoding="utf-8" ?>

<ui namespace="AppTabbar_iPhone">
	
	<row class="wrapper">
		<image id="bg"/>
		<row class="item-wrapper">
			<image id="home-bg" class="item-active-bg"></image>
			<button id="home-button" class="item-icon icon-home"></button>
		</row>
		<row class="item-wrapper">
			<image id="search-bg" class="item-active-bg"></image>
			<button id="search-button" class="item-icon icon-search"></button>
		</row>
		<row class="item-wrapper">
			<image id="cart-bg" class="item-active-bg"></image>
			<button id="cart-button" class="item-icon icon-cart"></button>
			<row class="badge-wrapper">
				<image id="badge-bg" class="badge-bg"/>
				<label id="badge" class="badge-number"/>
			</row>
		</row>
		<row class="item-wrapper">
			<image id="user-bg" class="item-active-bg"></image>
			<button id="user-button" class="item-icon icon-user"></button>
		</row>
	</row>

	<style type="text/css">
		#bg {
			image: url(footer_bg.png);
			image-insets: 0 25;
			image-mode: fit;
			position: absolute;
			left: 0;
			top: 0;
		}
		
		.wrapper {
			width: 100%;
			height: 100%;
			float: center;
		}
		
		.item-wrapper {
			width: 25%;
			height: 100%;
		}
		
		.item-active-bg {
			width: 100%;
			height: 100%;
			position: absolute;
			left: 0;
			top: 3px;
			image: url(footer_active_bg.png);
		}
		
		.item-icon {
			width: 100%;
			height: 100%;
			position: absolute;
			left: 0px;
			top: 0px;
		}
		
		.icon-home {
			image: url(footer_home_icon.png);
			image-selected: url(footer_home_active_icon.png);
		}
		
		.icon-search {
			image: url(footer_search_icon.png);
			image-selected: url(footer_search_active_icon.png);
		}
		
		.icon-cart {
			image: url(footer_shopping_cart_icon.png);
			image-selected: url(footer_shopping_cart_active_icon.png);
		}
		
		.icon-user {
			image: url(footer_user_icon.png);
			image-selected: url(footer_user_active_icon.png);
		}
		
		.badge-wrapper {
			width: auto;
			height: 17px;
			position: absolute;
			left: 45px;
			top: 6px;
		}
		
		.badge-bg {
			width: 100%;
			height: 100%;
			position: absolute;
			left: 0px;
			top: 0px;
			image-src: url(search_new_shopping_cart_num_bg.png);
		}
		
		.badge-number {
			width: auto;
			height: 100%;
			color: white;
			margin-left: 8px;
			margin-right: 8px;
			font-size: 12px;
			font-weight: bold;
			text-align: center;
		}
		
	</style>
</ui>
